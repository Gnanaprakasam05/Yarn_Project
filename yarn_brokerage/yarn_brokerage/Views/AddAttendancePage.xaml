                    </Grid.RowDefinitions>


                    <!--<Label Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" Text="Receipt No" FontSize="17" />
                    <Label x:Name="lblReceiptNo" Grid.Row="0" Grid.Column="1" VerticalOptions="CenterAndExpand" Text="New" FontSize="17" FontAttributes="Bold" />-->
                    
                    <Label x:Name="lblDateTime" Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" Text="Receipt Date" FontSize="17" />
                    <DatePicker x:Name="txtDateTime" Grid.Row="0" Grid.Column="1" Format="dd-MM-yyyy" IsEnabled="false"  FontSize="16" />
                    <Label Text="Remarks" Grid.Row="1" Grid.Column="0" VerticalOptions="CenterAndExpand" FontSize="17" />
                    <Editor x:Name ="txtRemarks"  Grid.Row="1" Grid.Column="1"  HeightRequest="90" FontSize="16" />
                    <!--<Entry x:Name="txtDateTime" Grid.Row="0" Grid.Column="1" Text="{Binding date, StringFormat='\{0:dd-MM-yyyy}'}"  InputTransparent="True" FontSize="16" />-->
                    <!--<Label x:Name="lblLedgerType" Grid.Row="2" Grid.Column="0" VerticalOptions="CenterAndExpand" Text="Contact Type" FontSize="17" />

                    <Grid Grid.Row="2" VerticalOptions="CenterAndExpand" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        --><!--<input:RadioButtonGroupView Grid.Column="0" Grid.Row="0" FlowDirection="LeftToRight" >--><!--

                        <input:RadioButton x:Name="RdoSupplier" Grid.Row="0" Grid.Column="0" TextFontSize="15" Text="Supplier"  TextColor="Black" IsChecked="True" Clicked="RdoSupplier_Clicked" ></input:RadioButton>
                        <input:RadioButton x:Name="RdoCustomer" Grid.Row="0" Grid.Column="1" TextFontSize="15" Text="Customer" TextColor="Black" Clicked="RdoCustomer_Clicked" ></input:RadioButton>

                        --><!--</input:RadioButtonGroupView>--><!--
                    </Grid>
                    
                    <Label x:Name="lblcontactname" Text="Supplier" Grid.Row="3" Grid.Column="0" VerticalOptions="CenterAndExpand" FontSize="17" />
                    <StackLayout Grid.Row="3" Grid.Column="1">
                    <Entry x:Name="txtLedgerName" Text="{Binding Attendance.ledger_name}"  Placeholder="Supplier Name"  Margin="0" InputTransparent="True" FontSize="16"  />
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer
                                Tapped="TxtLedgerName_Focused"
                                NumberOfTapsRequired="1">
                            </TapGestureRecognizer>
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <StackLayout x:Name="butLedgerClear" BackgroundColor="Transparent" WidthRequest="45" Grid.Column="1" Grid.Row="3" HorizontalOptions="End">
                        <Image HeightRequest="10" WidthRequest="10" VerticalOptions="End" Margin="25,15,0,0" Source="close.png" >
                        </Image>
                        <StackLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="ButLedgerClear_Clicked" NumberOfTapsRequired="1" />
                        </StackLayout.GestureRecognizers>
                    </StackLayout>
                    <Label Text="Company Name" Grid.Row="4" Grid.Column="0" VerticalOptions="CenterAndExpand" FontSize="17" />
                    <Entry Text="{Binding Attendance.company_name}" x:Name="txtCompanyName" Grid.Row="4" Grid.Column="1" IsEnabled="False"  Placeholder="Company Name" FontSize="16" />
                    <Label Text="Amount" Grid.Row="5" Grid.Column="0" VerticalOptions="CenterAndExpand" FontSize="17" />

                    <Grid Grid.Row="5" Grid.Column="1" VerticalOptions="CenterAndExpand" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                    <Entry Text="{Binding Attendance.total_receipt_amount,  Mode=TwoWay, StringFormat='\{0:0}'}" Grid.Row="0" Grid.Column="0" Keyboard="Numeric" Placeholder="Amount" TextChanged="txtReceiptAmount_TextChanged" Unfocused="txtReceiptAmount_Focused"  ReturnType="Next" x:Name="txtReceiptAmount" FontSize="16" />
                        <Button x:Name="butApply" Grid.Row="0"  Grid.Column="1" Clicked="butApply_Clicked" Text="Apply" ></Button>
                    </Grid>-->

                    <Frame x:Name="grdDispatch" BackgroundColor="WhiteSmoke" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="-5,0,0,0" Padding="5,10,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.9*"/>
                                <ColumnDefinition Width="0.1*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.ColumnSpan="2" x:Name="lblReceiptDetails" FontAttributes="Bold" TextDecorations="Underline" FontSize="17" />
                            <!--<Image Grid.Column="1" x:Name="lblAddReceipt" Source="pl.png" HeightRequest="18" WidthRequest="18"  Margin="0,0,5,0">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="lblAddReceipt_Clicked" NumberOfTapsRequired="1"/>
                                </Image.GestureRecognizers>
                            </Image>-->
                        </Grid>
                    </Frame>
                </Grid>
            <!--BindingContext="{Binding Source = yarn_brokerage.ViewModels.AttendanceDetailViewModel}" HeightRequest="0"-->
                    <ListView x:Name="AttendanceListView"                        
                        ItemsSource="{Binding AttendanceDetails}"
                              VerticalOptions="Center"                             
                        HasUnevenRows="True"                                                
                        ItemSelected="OnItemSelected"
                        TabIndex="0"  
                        SeparatorColor="LightGray" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="5" Grid.ColumnSpan="2">
                                        <Grid  ColumnSpacing="0"  >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.1*"/>
                                                <ColumnDefinition Width="0.4*"/>
                                                <ColumnDefinition Width="0.5*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                
                                                <!--<RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>-->
                                            </Grid.RowDefinitions>
                                            <Image HeightRequest="26" WidthRequest="26" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0" Source="calendar.png" />
                                            <Label Grid.Row="0" Grid.Column="1" Text="{Binding log_time}" 
                                                LineBreakMode="NoWrap"
                                                Style="{DynamicResource ListItemTextStyle}"
                                                FontSize="16" FontAttributes="Bold" />
                                            <Label Grid.Row="0" Grid.Column="2"  VerticalOptions="Center" HorizontalOptions="End" Text="{Binding log_status}" 
                                                LineBreakMode="WordWrap"
                                                Style="{DynamicResource ListItemTextStyle}"
                                                FontSize="16"/>
                                                <!--<Image HeightRequest="26" WidthRequest="20" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="5" HorizontalOptions="End" Source="delete.png">
                                                    <Image.GestureRecognizers>
                                                        <TapGestureRecognizer Tapped="DeleteClicked" CommandParameter="{Binding commission_invoice_id}" NumberOfTapsRequired="1" />
                                                    </Image.GestureRecognizers>
                                                </Image>-->

                                        </Grid>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--<Grid x:Name="grdStatus" HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand" IsVisible="{Binding Attendance.status}" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>                        
                    </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" x:Name="lblApproved" Grid.Row="0" Source="{Binding Attendance.status_image}" VerticalOptions="CenterAndExpand" Margin="0,5,0,0" >
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="LblApproved_Clicked" NumberOfTapsRequired="1"/>
                        </Image.GestureRecognizers>
                    </Image>
                        --><!--<Label Text="Log" Grid.Row="1" Grid.Column="0" TextColor="#0000FF" Margin="0,20,0,0" FontSize="20">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer  Tapped="Log_Tapped"  NumberOfTapsRequired="1"></TapGestureRecognizer>
                            </Label.GestureRecognizers>
                        </Label>--><!--
                    </Grid>-->

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>                            
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.1*"/>
                            <ColumnDefinition Width="0.0*"/>
                            <ColumnDefinition Width="0.6*"/>
                            <ColumnDefinition Width="0.3*"/>
                        </Grid.ColumnDefinitions>

                        
                        <Button Grid.Column="2"  HorizontalOptions="End" x:Name="butSave" Grid.Row="0" Text="Send For Approval" Clicked="Save_Clicked" ></Button>
                        <Button Grid.Column="3" x:Name="butCancel" Grid.Row="0"  Text="Cancel" Clicked="Cancel_Clicked" ></Button>
                        
                    </Grid>
                

                
            </StackLayout>
        <!--</ScrollView>-->
    </ContentPage.Content>
    
</ContentPage>
