                               TextColor="Gray" Style="{DynamicResource ListItemDetailTextStyle}" FontAttributes="Bold"  FontSize="20" />

                            <Label x:Name="txtClinicLocation10" LineBreakMode="WordWrap" HorizontalOptions="Center" Text="Delivery" VerticalOptions="Center" 
                           TextColor="Black" Style="{DynamicResource ListItemDetailTextStyle}" FontSize="15" />
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Delivery_Tapped" NumberOfTapsRequired="1"/>
                            </StackLayout.GestureRecognizers>

                        </StackLayout>
                   
                    </Grid>
                    <Grid ColumnSpacing="0" Margin="0,0,0,0" >
                        <Grid.ColumnDefinitions >
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>



                    </Grid>
                </StackLayout>
            </Frame>



            <Frame Margin="5,5,5,0" Padding="0" BorderColor="Transparent" IsVisible="False" CornerRadius="5">
                <StackLayout Margin="0,0,0,20">
                    <Frame BackgroundColor="WhiteSmoke" Margin="0,0,0,0" Padding="0" CornerRadius="0"  >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.1*" />
                                <ColumnDefinition Width="0.4*" />
                                <ColumnDefinition Width="0.1*" />
                                <ColumnDefinition Width="0.5*" />
                            </Grid.ColumnDefinitions>
                            <Image x:Name="butPreviousTop" Grid.Column="0" HeightRequest="24" WidthRequest="24" Margin="0,0,10,0" HorizontalOptions="End" Source="ic_b_launcher.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TopPreviousDate_Tapped" NumberOfTapsRequired="1" />
                                </Image.GestureRecognizers>
                            </Image>
                            <DatePicker Grid.Column="1" IsVisible="True" x:Name="topDatePicker" Date="{Binding date}" Format="dd MMM yyyy" FontSize="17"  HorizontalOptions="CenterAndExpand" DateSelected="topDatePicker_DateSelected"/>
                            <Label Grid.Column="1" IsVisible="False" x:Name="grdTopEnDate" Text="TILL DATE" FontSize="17" Margin="0,10,0,11" TextColor="Black"  HorizontalOptions="CenterAndExpand"/>
                            <Image x:Name="butNextTop" Grid.Column="2" HeightRequest="24" WidthRequest="24" Margin="10,0,0,0" HorizontalOptions="Start" Source="ic_launcher.png">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TopNextDate_Tapped" NumberOfTapsRequired="1" />
                                </Image.GestureRecognizers>
                            </Image>
                            <Label Grid.Column="3" Text="TOP 5 ENQUIRIES" FontSize="17" Margin="0,10,0,11" TextColor="Black"  HorizontalOptions="CenterAndExpand"/>
                        </Grid>
                        <!--<Label Text="Today" HorizontalOptions="Center" FontSize="18" VerticalOptions="Center" ></Label>-->
                    </Frame>
                 

                    <ListView x:Name="EnquiryListView"
                       ItemsSource="{Binding _TopDashboard}"
                       VerticalOptions="FillAndExpand"                        
                       HasUnevenRows="true"                                                                            
                       IsRefreshing="{Binding IsBusy, Mode=OneWay}"
                       CachingStrategy="RecycleElement"                             
                       TabIndex="0"
                       SeparatorColor="LightGray">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Padding="5">
                                        <Grid ColumnSpacing="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.1*"/>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.1*"/>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.1*"/>
                                                <ColumnDefinition Width="0.3*"/>
                                                <!--<ColumnDefinition Width="0.1*"/>-->
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <!--<Label Grid.ColumnSpan="2" Grid.Row="0" Text="{Binding transaction_date_time,  StringFormat='\{0:dd-MM-yyyy hh:mm:ss}'}" 
                                           LineBreakMode="WordWrap" 
                                           Style="{DynamicResource ListItemTextStyle}" 
                                           FontSize="16" />-->
                                            <!--<Image HeightRequest="36" WidthRequest="36" VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.RowSpan="3" Source="{Binding image}">

                                           </Image>-->
                                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" VerticalOptions="Start" Text="{Binding count_name}" 
                                           LineBreakMode="NoWrap"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           FontSize="20"  />

                                            <Image HeightRequest="20" WidthRequest="20"  Grid.Column="0" Grid.Row="1" Source="buyer.png" HorizontalOptions="Center"/>
                                            <Label Grid.Row="1" Grid.Column="1" VerticalOptions="Center" Text="{Binding Qty, StringFormat='\{0} BAGS'}" 
                                           LineBreakMode="WordWrap"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           FontSize="16"/>

                                            <Image HeightRequest="20" WidthRequest="20"  Grid.Column="2" Grid.Row="1" Source="customer.png" HorizontalOptions="Center"/>
                                            <Label Grid.Row="1" Grid.Column="3" VerticalOptions="Center"  Text="{Binding OfferQty, StringFormat='\{0} BAGS'}" 
                                           LineBreakMode="WordWrap"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           FontSize="16"/>

                                            <Image HeightRequest="20" WidthRequest="20"  Grid.Column="4" Grid.Row="1" Source="confirm.png" HorizontalOptions="Center"/>
                                            <Label Grid.Row="1" Grid.Column="5" VerticalOptions="Center"  Text="{Binding ConfirmQty, StringFormat='\{0} BAGS'}" 
                                           LineBreakMode="WordWrap"
                                           Style="{DynamicResource ListItemTextStyle}"
                                           FontSize="16"/>
                                        </Grid>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Grid ColumnSpacing="0" Margin="30,0,30,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.3*" />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                        <Label x:Name="lblTopEnDaily" Grid.Row="0" Grid.Column="0" Text="DATEWISE" HorizontalOptions="StartAndExpand" TextColor="Black" FontSize="16" FontAttributes="Bold" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TopEnDaily_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label x:Name="lblTopEnMonthly" Grid.Row="0" Grid.Column="1"  Text="MONTHWISE" HorizontalOptions="CenterAndExpand" TextColor="Black" FontSize="16" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TopEnMonthly_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                        <Label x:Name="lblTopEnTillDate" Grid.Row="0" Grid.Column="2" Text="TILL DATE" HorizontalOptions="EndAndExpand" TextColor="Black" FontSize="16" >
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="TopEnTillDate_Tapped" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>

</ContentPage>